# SecurePaste Environment Variables
# Copy this file to .env and modify the values as needed

# Base URL for the application (used for generating paste links)
# Examples:
#   - Development: http://localhost:8080
#   - Production: https://paste.yourdomain.com  
#   - Local network: http://192.168.1.100:8080
BASE_URL=http://localhost:8080

# Database configuration (flexible for all environments)
# Option 1: Use individual components (recommended)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=pastebin
DB_USERNAME=pastebin
DB_PASSWORD=pastebin123

# Option 2: Use complete URL (alternative)
# DB_URL=jdbc:postgresql://postgres:5432/pastebin

# Java runtime options
JAVA_OPTS=-Xmx512m -XX:+UseContainerSupport

# Spring profile (development, production, docker)
SPRING_PROFILES_ACTIVE=docker

# PostgreSQL configuration
POSTGRES_DB=pastebin
POSTGRES_USER=pastebin
POSTGRES_PASSWORD=pastebin123

# Redis configuration (if using Redis profile)
REDIS_PASSWORD=redis123

# SSL configuration (if using nginx with HTTPS)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem